<odoo>
    <template id="certification_share_view">
        <t t-call="website.layout">
            <t t-set="title">Certification of Achievement - Firenor Academy</t>
            <head>
                <meta property="og:title" t-att-content="og_title"/>
                <meta property="og:description" t-att-content="og_description"/>
                <meta property="og:image" t-att-content="og_image_url"/>
                <meta property="og:type" content="article"/>
                <meta property="og:url" t-att-content="og_url"/>
            </head>
            <body>
                <div class="container mt-5">
                    <div class="row">
                        <div class="col-12 text-center">
                            <h1>Certification of Achievement</h1>
                            <h2 t-esc="user_input.partner_id.name or user_input.email"/>
                            <p>Congratulations on successfully completing the <strong t-esc="user_input.survey_id.display_name"/> program!</p>
                        </div>
                    </div>
                    <div class="row mt-3">
                        <div class="col-12 text-center">
                            <img src="/fn_academy/static/img/firenor-one_seagreen.png" alt="Certification Preview" class="img-fluid"/>
                        </div>
                    </div>
                </div>
            </body>
        </t>
    </template>
</odoo>
