<odoo>
    <template id="certification_report_view" inherit_id="survey.certification_report_view" priority="20">
        <xpath expr="." position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="user_input">
                    <t t-set="layout_values"
                       t-value="user_input.survey_id.certification_report_layout.split('_') if user_input.survey_id.certification_report_layout else ['not', 'thing']"/>
                    <t t-set="layout_template" t-value="layout_values[0]"/>
                    <t t-set="layout_color" t-value="layout_values[1]"/>
                    <div id="o_survey_certification" t-att-data-oe-model="user_input._name"
                         t-att-data-oe-id="user_input.id"
                         t-attf-class="#{'article certification-wrapper ' + layout_template + ' ' + layout_color}">
                        <style>
                            @font-face {
                            font-family: 'Square721BT';
                            src: url('/fn_academy/static/src/fonts/square_721_bt.ttf') format('truetype');
                            font-weight: normal;
                            font-style: normal;
                            }
                            .fn_font{
                            font-family: 'Square721BT', sans-serif !important;
                            }
                            .firenor-one{
                            background-color: #ffffff !important;
                            background: url(/fn_academy/static/img/firenor-one_seagreen.png);
                            background-size: cover;
                            text-align: center;
                            }
                        </style>
                        <div t-attf-class="#{'container h-100 justify-content-center align-items-center' + layout_template + ' ' + layout_color}">
                            <div class="row mt-5 pt-4 mb-2">
                                <div class="col-12 mt-5 pt-5">
                                    <h1 class="fn_font my-1 py-1" style="text-transform: uppercase !important;">
                                        Certificate
                                        <span t-if="user_input.scoring_success">of Achievement</span>
                                    </h1>
                                </div>
                            </div>
                            <div class="row mt-3 pt-1">
                                <div class="col-12  mt-1 pt-1">
                                    <p class="mt-5 pt-5">This certificate is presented to</p>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-12">
                                    <h1>
                                        <t t-esc="user_input.partner_id.name or user_input.email"/>
                                    </h1>
                                </div>

                            </div>
                            <div class="row px-5 mx-5 mt-5">
                                <div class="col-12 px-5 my-1">
                                    <p class="fn_font mx-2" t-if="user_input.scoring_success">For successfully
                                        completing
                                        <em>
                                            <t t-esc="user_input.survey_id.display_name"/>
                                        </em>
                                        .<br/>Your dedication, perseverance,
                                        and hard work have not only earned you this certification but also reflect your
                                        commitment to excellence. Your efforts have made a meaningful impact, and we are
                                        incredibly proud of your achievement. This accomplishment demonstrates your
                                        ability to rise to challenges and excel, and we look forward to witnessing your
                                        continued success in future endeavors.
                                    </p>
                                    <p class="mx-1" t-else=" ">for taking the
                                        <em>
                                            <t t-esc="user_input.survey_id.display_name"/>
                                        </em>
                                        course.
                                    </p>
                                </div>
                            </div>

                            <div class="row m-5 p-4" t-if="user_input.scoring_success">
                                <div class="col-12 mt-3 pt-3 px-5" style="text-align: right">
                                    <p class="m-1" style="border-top: 3px solid white !important;">Certification nÂ°
                                        <span t-out="str('FNA')+str(user_input.id).rjust(10, '0')"/>
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
