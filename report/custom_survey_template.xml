<odoo>
    <template id="certification_report_view" inherit_id="survey.certification_report_view" priority="20">
        <xpath expr="." position="replace">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="user_input">

                    <!--<t t-set="layout_values"
                       t-value="user_input.survey_id.certification_report_layout.split('_') if user_input.survey_id.certification_report_layout else ['firenor', 'seagreen']"/>-->
                    <t t-set="layout_values"
                       t-value="user_input.survey_id.certification_report_layout.split('_') if user_input.survey_id.certification_report_layout else ['not', 'thing']"/>

                    <!--<t t-set="layout_values" t-value="['firenor', 'seagreen']"/>-->
                    <t t-set="layout_template" t-value="layout_values[0]"/>
                    <t t-set="layout_color" t-value="layout_values[1]"/>
                    <div id="o_survey_certification" t-att-data-oe-model="user_input._name"
                         t-att-data-oe-id="user_input.id"
                         t-attf-class="#{'article certification-wrapper ' + layout_template + ' ' + layout_color}">
                        <style>
                            .firenor{
                            background-color: #ffffff !important;
                            background: url(/fn_academy/static/img/seagreen_certificate_completion.png);
                            background-size: cover;
                            border: 1px solid red;
                            }
                        </style>
                        <div t-attf-class="#{'container h-100 justify-content-center align-items-center ' + layout_template + ' ' + layout_color}">
                            <div class="row">
                                <div class="col">
                                    <h1>Certificate of Completion</h1>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col"><p>This is presetned to:</p></div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <h1>
                                        <t t-esc="user_input.partner_id.name or user_input.email"/>
                                    </h1>
                                </div>

                            </div>
                            <div class="row">
                                <div class="col">
                                    <p>successfully completed <t t-esc="user_input.survey_id.display_name"/>.</p>

                                </div>

                            </div>
                            <div class="row">
                                <div class="col">Name 1</div>
                                <div class="col">Name 2</div>
                            </div>
                            <div class="row">
                                <div class="col">Posistion 1</div>
                                <div class="col">Posistion2</div>
                            </div>
                        </div>
                    </div>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
