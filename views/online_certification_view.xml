<odoo>
    <data>
        <template id="certification_web_view" name="Certification Web View">
            <t t-call="website.layout">
                <div class="container">
                    <h1>Certification Information</h1>
                    <p>User Input ID:
                        <t t-esc="object.id"/>
                    </p>
                    <p>Partner Name:
                        <t t-esc="object.partner_id.name if object.partner_id else 'N/A'"/>
                    </p>
                </div>

            </t>
        </template>
    </data>
</odoo>
